<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="4">

    <FrameLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.tq.views.disperseview.StellarMap
            android:id="@+id/sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tq.views.CRoundImageView
            android:id="@+id/iv_center"
            android:layout_width="@dimen/randomWidth"
            android:layout_height="@dimen/randomHeight"
            android:layout_gravity="center"
            android:contentDescription="@string/wishContent"
            android:scaleType="fitCenter"
            android:src="@drawable/aut"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#FAD8"
        android:orientation="vertical"
        android:visibility="visible"/>

</LinearLayout>