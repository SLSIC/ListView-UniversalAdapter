<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- normal -->
    <item android:state_enabled="true" android:state_focused="false" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/circle" />
            <item android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="#888" />
                    <gradient android:angle="270" android:endColor="#FF91c0e8" android:startColor="#FFa7d3fa" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- pressed -->
    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item android:drawable="@drawable/circle" />
            <item android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="#c924b8" />
                    <gradient android:angle="270" android:endColor="#d1d43c" android:startColor="#5D5" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- selected -->
    <item android:state_enabled="true" android:state_focused="true" android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/circle" />
            <item android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp">
                <shape android:shape="oval">
                    <stroke android:width="1dp" android:color="#c924b8" />
                    <gradient android:angle="270" android:endColor="#AC5" android:startColor="#5D5" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>